<?xml version="1.0" encoding="utf-8"?><!--suppress AndroidElementNotAllowed -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/option_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/option_click"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/option_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:contentDescription="@string/option_icon_description"
                android:src="@drawable/ic_exclamation" />

            <TextView
                android:id="@+id/option_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center_vertical"
                android:paddingEnd="10dp"
                android:paddingStart="25dp"
                android:text="@string/option_item_title_placeholder"
                android:textColor="@color/md_white_1000"
                android:textSize="18sp"
                android:textStyle="italic" />

        </LinearLayout>

    <at.markushi.ui.CircleButton
        android:id="@+id/option_configure"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:focusable="true"
        android:src="@drawable/ic_cog"
        app:cb_color="@color/accent"
        app:cb_pressedRingWidth="6dp" />

</LinearLayout>

