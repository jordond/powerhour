<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GameTypeItem">
        <attr name="gti_background" format="color" />
        <attr name="gti_accent" format="color" />
        <attr name="gti_icon" format="reference" />
        <attr name="gti_title" format="string" />
        <attr name="gti_type" format="enum">
            <enum name="NONE" value="0" />
            <enum name="POWER_HOUR" value="1" />
            <enum name="CENTURY" value="2" />
            <enum name="SPARTAN" value="3" />
            <enum name="CUSTOM" value="4" />
        </attr>
        <attr name="gti_hide_button" format="boolean" />
    </declare-styleable>

    <declare-styleable name="PlusMinusButtons">
        <attr name="pmb_width" format="dimension" />
        <attr name="pmb_height" format="dimension" />
    </declare-styleable>

    <declare-styleable name="GameControlButtons">
        <attr name="gcb_maxPauses" format="integer" />
        <attr name="gcb_color" format="color" />
    </declare-styleable>
</resources>